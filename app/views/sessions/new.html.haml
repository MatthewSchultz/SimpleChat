.row.h-100.align-items-center
  .col-sm-12
    = form_for @session, html: {class: 'sign-in'} do |f|
      .header
        %h1 SimpleChat Login
        %p Sign in to access SimpleChat.
      .form-group
        = f.email_field :email_address, class: 'form-content w-100', placeholder: 'Email Address', required: true
        = f.label :email_address, 'Email Address'
      .form-group
        = f.password_field :password, class: 'form-content w-100', placeholder: 'Password', required: true
        = f.label :password, 'Password'
      .form-group
        %button.btn.btn-lg.btn-primary.btn-block{type: 'submit'} Sign In
